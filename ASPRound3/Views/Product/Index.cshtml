@@model IEnumerable<Product>

    <h2>Products</h2>


    @*give the user the ability to make create new products*@

    <div style="display: inline-block" class="btn btn-outline-success">
        <a href="/Product/InsertProduct/">Create a New Product</a>
    </div>


    <table class="table">
        <tr>
            <th>ID</th>
            <th>Name</th>
            <th>Price</th>
            <th>Category ID</th>
            <th>On Sale</th>
            <th>Stock Level</th>
        </tr>



        @* make each ProductID on our Index page a link that will take us to an individual product - <td><a href=/Product/ViewProduct/@product.ProductID>@product.ProductID</a></td> *@


        @foreach (var product in Model)
        {
            <tr>
                <td><a href=/Product/ViewProduct/@product.ProductID>@product.ProductID</a></td>
                <td>@product.Name</td>
                <td>$@product.Price</td>
                <td>@product.CategoryID</td>
                <td>@product.OnSale</td>
                <td>@product.StockLevel</td>
            </tr>

        }
    </table>
