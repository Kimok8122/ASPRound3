@model Product

<h3>@Model.Name Information</h3>

<table class="table">
    <tr>
        <th>Product ID</th>
        <th>Name</th>
        <th>Price</th>
        <th>Category ID</th>
        <th>On Sale</th>
        <th>StockLevel</th>
    </tr>
    <tr>
        <td>@Model.ProductID</td>
        <td>@Model.Name</td>
        <td>$@Model.Price</td>
        <td>@Model.CategoryID</td>
        <td>@Model.OnSale</td>
        <td>@Model.StockLevel</td>
    </tr>

</table>

@* ability to make updates to that product *@

<div style=" display: inline-block" class="btn btn-outline-primary">
    <a href="/Product/UpdateProduct/@Model.ProductID">Update this Product</a>
</div>

 @* user the ability to delete products *@

<div>
    @using (Html.BeginForm("DeleteProduct", "Product", "Post"))
    {
        <input type="submit" class="btn btn-outline-danger" onclick="return confirm('You are about delete this item the database, you sure?')" value="Delete this product" />
        <input type="hidden" asp-for="ProductID" value="@Model.ProductID" />

        @*<input type="submit" onclick="return confirm('You are about delete this item the database, you sure?')" value="Delete this product" />*@

    }

</div>

